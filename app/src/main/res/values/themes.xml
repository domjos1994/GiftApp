<resources>
    <!-- Base application theme. -->
    <style name="Theme.GiftApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_primary_on</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_secondary_on</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GiftApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GiftApp.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary_on</item>
        <item name="tabIconTint">@color/color_primary_on</item>
        <item name="tabSelectedTextColor">@color/color_primary_on</item>
    </style>

    <style name="Theme.GiftApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/color_primary_on</item>
        <item name="android:colorForeground">@color/color_primary_on</item>
        <item name="android:textColorPrimary">@color/color_primary_on</item>
    </style>

    <style name="Theme.GiftApp.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:filter">@color/color_primary_on</item>
    </style>

    <style name="Theme.GiftApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>